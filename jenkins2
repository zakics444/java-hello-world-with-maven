pipeline{
    agent any
    stages{
        stage('cloning_git_repo'){
            steps{
                git 'https://github.com/zakics444/java-hello-world-with-maven.git'
            }
        }
        stage('building'){
            steps{
                sh 'mvn clean package'
            }
        }
        stage('release'){
            steps{
            archiveArtifacts 'target/*.jar'
            }
        }
    }
post {
  always {
    // One or more steps need to be included within each condition's block.
  }
}
}
