pipeline{
    agent any
    stages{
        stage('cloning_git_repo'){
            steps{
                git 'https://github.com/zakics444/java-hello-world-with-maven.git'
            }
        }
        stage('building'){
            steps{
                sh 'mvn clean package'
            }
        }
        stage('release'){
            steps{
            archiveArtifacts 'target/*.jar'
            }
        }
    }
post {
  always {
    emailext body: 'dekhle bhhaiiiii', subject: 'aise hi ', to: 'k.zaki.cs1@gmail.com'
  }
}
}
